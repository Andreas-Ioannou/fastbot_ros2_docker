cat > fastdds_local.xml <<'XML'
<?xml version="1.0" encoding="UTF-8"?>
<dds xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">
  <profiles>
    <participant profile_name="default" is_default_profile="true">
      <rtps>
        <builtin>
          <avoid_builtin_multicast>true</avoid_builtin_multicast>

          <!-- Where *I* advertise metatraffic (use host LAN IP) -->
          <metatrafficUnicastLocatorList>
            <locator><udpv4><address>172.17.0.1</address><port>16</port></udpv4></locator>
          </metatrafficUnicastLocatorList>

          <!-- Who I try first for discovery (host LAN IP is fine; keep loopback too if you want) -->
          <initialPeersList>
            <locator><udpv4><address>172.17.0.1</address><port>16</port></udpv4></locator>
           <!-- <locator><udpv4><address>127.0.0.1</address><port>7400</port></udpv4></locator> -->
          </initialPeersList>
        </builtin>
      </rtps>
    </participant>
  </profiles>
</dds>
